<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/IM_divider_horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/divider_horizontal_line" />

    <ImageView
        android:id="@+id/IM_bg_header_top"
        android:layout_width="2dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/IM_divider_horizontal_line"
        android:scaleType="fitXY"
        android:src="@drawable/bg_header_top" />

    <ImageView
        android:id="@+id/IM_bg_header_top2"
        android:layout_width="2dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/IM_divider_horizontal_line"
        android:scaleType="fitXY"
        android:src="@drawable/bg_header_top" />

    <TextView
        android:id="@+id/Tv_My_bank_card"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/IM_divider_horizontal_line"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="0dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:paddingTop="5dp"
        android:text="@string/My_bank_card"
        android:textColor="#4B4B4B"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/Ib_left"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/IM_divider_horizontal_line"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/leftarrow" />

    <ImageButton
        android:id="@+id/bt_Edit"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/IM_divider_horizontal_line"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:src="@drawable/plus" />

    <ImageView
        android:id="@+id/IM_divider_horizontal_line1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/Tv_My_bank_card"
        android:scaleType="fitXY"
        android:src="@drawable/divider_horizontal_line" />

    <RelativeLayout
        android:id="@+id/History_treatment_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/IM_divider_horizontal_line1"
        android:background="#F5F5F5"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/IM_bg_header_top3"
            android:layout_width="2dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY"
            android:src="@drawable/bg_header_top" />

        <ImageView
            android:id="@+id/IM_bg_header_top4"
            android:layout_width="2dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:src="@drawable/bg_header_top" />

        <ImageView
            android:id="@+id/IV_Bank_of_communications_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/bank_logo" />

        <TextView
            android:id="@+id/Tv_Bank_of_Communications"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/IV_Bank_of_communications_logo"
            android:background="#FFFFFF"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="@string/Bank_of_Communications"
            android:textColor="#4B4B4B"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/Tv_Bank_of_Communications_Tail_number"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_below="@+id/Tv_Bank_of_Communications"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/IV_Bank_of_communications_logo"
            android:background="#FFFFFF"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="@string/Bank_of_Communications_Tail_number"
            android:textColor="#4B4B4B"
            android:textSize="10sp" />

        <ImageButton
            android:id="@+id/Ib_Right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:paddingRight="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/rightarrow_black" />

        <ImageView
            android:id="@+id/IM_divider_horizontal_line2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/IV_Bank_of_communications_logo"
            android:scaleType="fitXY"
            android:src="@drawable/divider_horizontal_line" />
    </RelativeLayout>

</RelativeLayout>