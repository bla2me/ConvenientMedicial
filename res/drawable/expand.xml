<!-- 连框颜色值 --><item>   
      <shape>   
            <solid android:color="#D5D5D5" />   
      </shape>   
</item>   
<!-- 主体背景颜色值 -->  
<item android:bottom="1dp" android:left="1dp" android:top="1dp">   
     <shape android:shape="rectangle">   
           <solid android:color="#F5F5F5" />  
             
                <corners android:topLeftRadius="3dp"
        android:bottomLeftRadius="3dp" />
     </shape>       
</item>  
</layer-list>  
